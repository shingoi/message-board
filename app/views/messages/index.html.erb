<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <span style="margin-left: 15px;" class="well well-sm"><%= message.body %></span>
      <br>
      <hr>
    <% end %>
  </div>
</div>

<%= form_for(@message, html: {class: 'form-horizontal'}) do |f| %>

      <% if @message.errors.present? %>
        <div class="alert alert-danger">
          <%= alert %>
          <ul>
            <% @message.errors.full_messages.each do |full_message| %>
              <li>
                <%= full_message %>
              </li>
            <% end %> 
          </ul>
        </div>
      <% end %>

    <div class="form-group">
        <label for="inputName" class="col-sm-2 control-label">名前：</label>
        <div class="col-sm-10">
            <%= f.text_field :name, id: "inputName", class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputBody" class="col-sm-2 control-label">内容：</label>
        <div class="col-sm-10">
            <%= f.text_area :body, id: "inputBody", class: "form-control" %>
        </div>
    </div>
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
<% end %>