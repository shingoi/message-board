<%= form_for(@message, html: {class: 'form-horizontal'}) do |f| %>

      <% if @message.errors.present? %>
        <div class="alert alert-danger">
          <%= alert %>
          <ul>
            <% @message.errors.full_messages.each do |full_message| %>
              <li>
                <%= full_message %>
              </li>
            <% end %> 
          </ul>
        </div>
      <% end %>
    
    <div class="container">
        <div class="row">
            <div class="form-group">
                <label for="inputName" class="col-xs-2 control-label">名前：</label>
                <div class="col-xs-3">
                    <%= f.text_field :name, id: "inputName", class: "form-control" %>
                </div>
                <label for="inputAge" class="col-xs-2 control-label">年齢：</label>
                <div class="col-xs-3">
                    <%= f.text_field :age, id: "inputAge", class: "form-control" %>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label for="inputBody" class="col-sm-2 control-label">内容：</label>
                <div class="col-sm-8">
                    <%= f.text_area :body, id: "inputBody", class: "form-control" %>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit class: "btn btn-sm btn-primary" %>
            </div>
        </div>
    </div><!-- .container end -->
<% end %>